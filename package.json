{
  "name": "classcat",
  "description": "Build a space-separated class attribute quickly.",
  "version": "4.0.0",
  "main": "src/index.js",
  "module": "src/index.js",
  "typings": "classcat.d.ts",
  "license": "MIT",
  "repository": "jorgebucaran/classcat",
  "files": [
    "src",
    "dist",
    "classcat.d.ts"
  ],
  "author": "Jorge Bucaran",
  "keywords": [
    "class",
    "classcat",
    "classname",
    "attribute",
    "classlist",
    "concat"
  ],
  "scripts": {
    "test": "nyc -i esm -r lcov testmatrix test/*.test.js && nyc report && tsc -p test/ts",
    "build": "npm run bundle && npm run bundle-umd && npm run minify && npm run minify-umd",
    "bundle": "rollup -i src/index.js -o dist/classcat.js --no-esModule -mf iife -n classcat",
    "bundle-umd": "rollup -i src/index.js -o dist/classcat.umd.js -mf umd -n classcat",
    "minify": "terser dist/classcat.js -o dist/classcat.js -mc --source-map includeSources,url=classcat.js.map",
    "minify-umd": "terser dist/classcat.umd.js -o dist/classcat.umd.js -mc pure_funcs=['Object.defineProperty'] --source-map includeSources,url=classcat.umd.js.map",
    "prepare": "npm run build",
    "release": "v=$npm_package_version; npm run build && git commit -am $v && git tag -s $v -m $v && git push && git push --tags && npm publish"
  },
  "devDependencies": {
    "esm": "^3.2.25",
    "nyc": "14.1.1",
    "testmatrix": "0.1.2",
    "rollup": "^1.16.2",
    "typescript": "^3.5.2",
    "terser": "^4.0.0"
  }
}
